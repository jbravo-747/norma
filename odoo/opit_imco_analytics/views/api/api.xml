<?xml version="1.0" encoding="ISO-8859-1" ?>
<openerp>
	<data>	
	
		<record id="imco_analitica_api_search_view" model="ir.ui.view">
			<field name="name">imco.analitica.api.search.view</field>
			<field name="model">imco.analitica.api</field>
			<field name="arch" type="xml">
				<search string="Analítica de API">
					<field name="proyecto" string="Proyecto asociado"  filter_domain="[('proyecto','ilike',self)]"/>
					<separator />
					<group expand="0" string="Agrupar por...">
						<filter name="group_by_proyecto" string="Proyecto" domain="[]" context="{'group_by':'proyecto'}"/>
						<filter name="group_by_date" string="Fecha de evento" domain="[]" context="{'group_by':'date'}"/>
						<filter name="group_by_accion" string="Acción" domain="[]" context="{'group_by':'accion'}"/>
						<filter name="group_by_user_id" string="Usuario" domain="[]" context="{'group_by':'user_id'}"/>
				   </group>
				</search>
			</field>
		</record>
		
		<record id="imco_analitica_api_tree_view" model="ir.ui.view">
			<field name="name">imco.analitica.api.tree.view</field>
			<field name="model">imco.analitica.api</field>
			<field name="arch" type="xml">
				<tree string="Analítica de API" >
					<field name="proyecto"/>
					<field name="accion"/>
					<field name="date" />
					<field name="user_id" />
				</tree>
			</field>
		</record>
		
		<record id="imco_analitica_api_form_view" model="ir.ui.view">
			<field name="name">imco.analitica.api.form.view</field> 
			<field name="model">imco.analitica.api</field>
			<field name="arch" type="xml">
				<form string="Analítica de API">
					<header>
					</header>
					<sheet>
						<group string="Detalle">
							<field name="proyecto"/>
							<field name="date"/>
							<field name="accion"/>
							<field name="user_id" options="{'no_create_edit':True}"/>
						</group>
						<group string="URL">
							<field name="url" nolabel="1" widget="url"/>
						</group>
						<group string="Parámetros">
							<field name="parametros" nolabel="1"/>
						</group>
						<!--
						<group string="Resultado">
							<field name="resultado" nolabel="1"/>
						</group>
						-->
					</sheet>
				</form>
			</field>
		</record>
		
	</data>
</openerp>
